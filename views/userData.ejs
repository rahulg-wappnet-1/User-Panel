<!-- User data page -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Document</title>
</head>
<body>
    <h1>Hi, I am <%= user.name  %></h1>
    <img src="<%=user.photo.secure_url%>" alt="">
    <p>My email id <%= user.email%></p>
    <p>I am <%= user.role%></p>
    <h4>Your tasks</h4>
    <p><%= user.task%></p>


    <% if (user.role === 'admin') { %>
        <button class="btn btn-primary" onclick="window.location='/task';" value="click here" >Create Task</button>
        <button class="btn btn-primary" onclick="window.location='/deleteUser';" value="click here" >Delete User</button>
        <button class="btn btn-primary" onclick="window.location='/assignRole';" value="click here" >Role assign</button>
      <% } %>

      <% if(user.role != 'admin'){ %> 
        <button class="btn btn-primary" onclick="window.location='/';" value="click here" >Home</button>
     <% }%>
    

</body>
</html>